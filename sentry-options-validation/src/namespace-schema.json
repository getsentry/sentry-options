{
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "type": {
      "const": "object"
    },
    "additionalProperties": {
      "type": "boolean"
    },
    "properties": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "type": {
              "enum": ["string", "integer", "number", "boolean", "array"]
            },
            "default": {},
            "description": {
              "type": "string"
            },
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "enum": ["string", "integer", "number", "boolean"]
                }
              },
              "required": ["type"]
            }
          },
          "required": ["type", "default", "description"],
          "additionalProperties": false,
          "allOf": [
            {
              "if": {
                "properties": {
                  "type": {
                    "const": "array"
                  }
                }
              },
              "then": {
                "required": ["items"]
              }
            }
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["version", "type", "properties"],
  "additionalProperties": false
}
